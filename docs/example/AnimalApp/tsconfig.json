{
  "include": ["src/**/*"],
  "exclude": ["**/flycheck*.ts"],
  "compilerOptions": {
    "jsx": "react",
    "removeComments": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "target": "ES2016",
    "sourceMap": true,
    "removeComments": true,
    "declaration": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "lib": ["dom", "esnext", "es6", "dom.iterable", "scripthost"]
  },
  "references": [
    {
      "path": "./plugins/plugin-example"
    }
  ]
}
